
 <div class = "w-full">
  
  <%# HEADER %>
  <div class = 'flex items-center justify-between border-b-[1px] border-b-gray-300 py-3 mb-4' >
    <div>
      <h1 class = 'text-2xl font-semibold mb-0'>
        Good <%= greeting %>, <%= current_admin.firstname%>
      </h1>
      <p class = 'text-gray-500'>Here's what's happening with your store today</p>
    </div>
    <div class = 'flex items-center gap-4 '>
      <i class="fa-solid fa-calendar-days text-lg p-2 bg-gray-100 rounded-md"></i>
      <p class = 'text-sm text-gray-700'><%= (Time.now + 8.hours).strftime("%B %d, %Y")%></p>
    </div>
  </div>
  <%# BOXES %>
  <div class = 'w-full shadow-[0_0_10px_rgba(0,0,0,0.1)] dark:hadow-[0_0_10px_rgba(0,0,0,0.1)] p-4 bg-white dark:bg-gray-100'>
    <%= line_chart @orders_data,height: '420px', xtitle: 'Date', ytitle: 'Sales Value',title: "Sales Performance (Last 1 Month)" , loading: "Loading..."%>
  </div>
</div>