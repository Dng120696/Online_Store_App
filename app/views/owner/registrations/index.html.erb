<div class="p-6 bg-white dark:bg-gray-700 shadow-[0_0_10px_rgba(0,0,0,0.15)] dark:shadow-[0_0_10px_rgba(0,0,0,0.35)] rounded-md">
  <h1 class="text-3xl font-semibold mb-4 text-gray-800 dark:text-gray-100">Hello, <%= current_admin.firstname%>!</h1>
  <div class="mt-6 dark:text-gray-50">
    <h2 class="text-base font-semibold mb-4">Here are your pending approvals:</h2>
    <ul class = 'grid grid-cols-[300px,100px,100px] text-lg font-bold items-center gap-4 mb-2 pb-2s border-b-[2px] border-b-gray-600'>
      <li class = 'text-center'>Accounts</li>
      <li class = 'text-center'>Status</li>
    </ul>
    <% if @users.any? %>
      <% @users.each do |user| %>
        <div class="grid grid-cols-[300px,100px,100px] items-center gap-4 mb-2 border-b-[1px] border-b-gray-300 pb-2">
          <p class="text-lg"><%= user.email %></p>
          <p class = 'text-center'> <%= user.status %></p>
          <div>
            <%= button_to "Approve", approve_owner_registration_path(user), method: :post, class: "bg-blue-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class = 'h-[10vh] flex items-center justify-center text-gray-400 '>No pending users found.</p>
    <% end %>
  </div>
  <%= link_to 'Back', owner_dashboard_index_path %>
</div>