<div>
  <%= link_to 'Create Customer', new_owner_customer_path %>
  <div>
    <ul class = 'grid grid-cols-[1fr,2fr,1fr,2fr] gap-4 font-bold text-xl'>
      <li>Email</li>
      <li>First Name</li>
      <li>Last Name</li>
      <li>Action</li>
    </ul>
    <ul class = 'grid grid-cols-[1fr,2fr,1fr,2fr] gap-4'>
      <%@users.each do |user|%>
        <p><%= user.email  %> </p>
        <p><%= user.firstname  %> </p>
        <p><%= user.lastname  %> </p>
        <li>
          <%= link_to 'Show', owner_customer_path(user) %>
          <%= link_to 'Edit', edit_owner_customer_path(user) %>
          <%= link_to 'Delete', owner_customer_path(user),  data: {turbo_method: :delete,turbo_confirm: 'Are you sure you want to delete this user?'} %>
        </li>
      <%end%>
    </ul>
  </div>
</div>
