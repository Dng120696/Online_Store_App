<%= render 'form'%>
<%= link_to 'Create New Address' , new_owner_customer_address_path(@user)%>
<% @addresses&.each do |address| %>
  <div class = 'p-6 border-2 w-[350px]'>
    <div class="flex gap-2">
      <%= link_to 'Edit', edit_owner_customer_address_path(@user,address)%>
      <%= link_to 'Delete', owner_customer_address_path(@user,address), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </div>
    <p><%=address[:email] %> </p>
    <p><%=address[:street] %> </p>
    <p><%=address[:zip_code] %> </p>
    <p><%=address[:city] %> </p>
    <p><%=address[:state_or_province] %> </p>
    <p><%=address[:country] %> </p>
    <p><%=address[:firstname] %> </p>
  </div>
<%end %>
