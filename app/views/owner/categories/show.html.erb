<!-- app/views/categories/show.html.erb -->
<div class="w-full mx-auto mt-10 p-4">
  <div class="bg-white p-6 rounded-lg shadow-[0_0_10px_rgba(0,0,0,0.15)]">
    <p id="notice" class="text-green-600 mb-4"><%= notice %></p>
    <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @category.title %></h1>
    <p class="text-gray-700 mb-4">Description: <%= @category.description %></p>
    <div class="mt-6">
      <h2 class="text-2xl font-semibold mb-2 text-gray-800">Products in this Category</h2>
      <% if @category.products.any? %>
        <ul class="list-disc list-inside pl-5">
          <% @category.products.each do |product| %>
            <li class="text-gray-700 mb-1">
              <%= product.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-600">No products available in this category.</p>
      <% end %>
    </div>
    <div class="mt-6 flex space-x-4">
      <%= link_to 'Edit', edit_owner_category_path(@category), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back', owner_categories_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
</div>
