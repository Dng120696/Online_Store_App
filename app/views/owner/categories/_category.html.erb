<ul class="grid grid-cols-3 gap-4 items-center py-3 pr-3 border-b-gray-300 border-b-[1px]">
  <li class="py-2 px-4"><%= category.title %></li>
  <li class="py-2 px-4"><%=  category.description || 'N/A'%></li>
  <li class="py-2">
    <%= link_to 'Show', owner_category_path(category), class: 'bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600' %>
    <%= link_to 'Edit', edit_owner_category_path(category), class: 'bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600' %>
    <%= link_to 'Delete', owner_category_path(category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this category?' }, class: 'bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600' %>
  </li>
</ul>
