<body class="fp-background">
<div class="min-h-screen flex fle-col items-center justify-center py-6 px-4">
  <div class="grid items-center gap-2  w-full">
    <div class = 'max-w-md w-full border py-8 px-6 rounded border-gray-300 bg-white'>
      <h3 class="text-2xl font-extrabold text-center mb-5">Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

          <div class="w-full my-2">
          <%= f.label :email, class:"text-sm block mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Enter your Email', class: "w-full text-sm border border-gray-300 px-4 py-3 rounded-md outline-[#333]" %>
          </div><br/>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class:"mb-4 w-full shadow-xl py-2.5 px-4 text-sm font-semibold rounded text-white bg-blue-600 hover:bg-blue-800 focus:outline-none" %>
          </div>
        <% end %>

      <div class="flex gap-2 justify-center">
        <%- if controller_name != 'sessions' %>
          <%= link_to "Back to login", new_session_path(resource_name), class: "text-blue-600 hover:underline text-sm" %> <br/>
        <% end %>
      </div>     
      
    </div>
  </div>
</div>
</body>
