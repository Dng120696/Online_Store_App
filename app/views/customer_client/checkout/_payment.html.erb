<%= form_tag(process_customer_client_checkout_index_path) do %>
  <label>
    <%= radio_button_tag :payment_method, 'gcash', payment_method == 'gcash', onchange: "this.form.submit()" %>
    GCash
  </label>
  <br>
  <label>
    <%= radio_button_tag :payment_method, 'card', payment_method == 'card', onchange: "this.form.submit()" %>
    Card
  </label>
<% end %>
<% if payment_method == 'gcash' %>
  <h1>GCash Payment</h1>
  <p>Please enter your GCash payment details:</p>
  <%= form_tag(confirm_customer_client_checkout_index_path, method: :post) do %>
    <div>
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name %>
    </div>
    <div>
      <%= label_tag :phone, 'Phone Number' %>
      <%= text_field_tag :phone %>
    </div>
    <div>
      <%= label_tag :email, 'Email' %>
      <%= email_field_tag :email %>
    </div>
    <%= hidden_field_tag :payment_method, 'gcash' %>
    <%= submit_tag 'Confirm Payment' %>
  <% end %>
<% elsif payment_method == 'card' %>
  <h1>Card Payment</h1>
  <p>Please enter your card details:</p>
  <%= form_tag(confirm_customer_client_checkout_index_path, method: :post) do %>
    <div>
      <%= label_tag :number, 'Card Number' %>
      <%= text_field_tag :number %>
    </div>
    <div>
      <%= label_tag :exp_month, 'Expiration Month' %>
      <%= text_field_tag :exp_month %>
    </div>
    <div>
      <%= label_tag :exp_year, 'Expiration Year' %>
      <%= text_field_tag :exp_year %>
    </div>
    <div>
      <%= label_tag :cvc, 'CVC' %>
      <%= text_field_tag :cvc %>
    </div>
    <%= hidden_field_tag :payment_method, 'card' %>
    <%= submit_tag 'Confirm Payment' %>
  <% end %>
<% end %>
