<body class="fp-background">
  <div class="min-h-screen flex fle-col items-center justify-center py-6 px-4">
    <div class="grid items-center gap-2 w-full">
      <div class = 'max-w-lg w-full border py-8 px-6 rounded border-gray-300 bg-white'>
        <h3 class="text-2xl font-extrabold text-center mt-5 mb-5">Resend confirmation instructions</h3>
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="w-full mb-2">
              <%= f.label 'Email', class:"text-sm block mb-2" %>
              <%= f.email_field :email, class: "w-full text-sm border border-gray-300 px-4 py-3 rounded-md outline-[#333]", autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
            </div>

            <div class="actions">
              <%= f.submit "Resend confirmation instructions", class:"mt-6 mb-4 w-full shadow-xl py-2.5 px-4 text-sm font-semibold rounded text-white bg-blue-600 hover:bg-blue-800 focus:outline-none" %>
            </div>
          <% end %>

          <%- if controller_name != 'sessions' %>
                <%= link_to "Back to login", new_session_path(resource_name), class: "text-blue-600 hover:underline text-sm" %> <br/>
          <% end %>

          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:underline text-sm" %><br />
        <% end %>

        <span class="text-sm mt-4 ">Don't have an account? </span>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Register here", new_registration_path(resource_name), class: "text-blue-600 hover:underline text-sm" %>
        <% end %>

        
      
      </div>
    </div>
  </div>
</body>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
